<%= form_tag users_path, :method => :get do %>

    <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

  <% @users.each do |user| %>
    <% if user.first_name != nil %>
    <div class="user-tile">
    <div class="panel panel-success user-panel">
    <div class="panel-heading">
        <% fullname = user.first_name+" "+user.last_name %>
        <h2>Name: <%= link_to fullname+" (click to view profile)", user %></h2>

    </div>
    <div class="panel-body">
        <p>Interested in: <%= user.interests %></p>
        <p>Skill Level: <%= user.status %></p>
    </div>
    </div>
    <% else %>
       <li><%= user.email %> has not filled out their profile yet</li>
    <% end %>

    </div>
    <br>
  <% end %>


<div class="center">
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>